{
  "name": "@gud/typescale",
  "version": "2.0.2",
  "description": "A utility for generating type scales.",
  "license": "MIT",
  "author": "Ryan Goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangoree/gud-typescale.git"
  },
  "sideEffects": false,
  "type": "module",
  "bin": {
    "typescale": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "watch": "rm -rf dist && tsc -p tsconfig.build.json --watch",
    "release": "npm run build && changeset publish"
  },
  "dependencies": {
    "clide-js": "^0.3.0-next.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^24.0.3",
    "typescript": "^5.8.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
