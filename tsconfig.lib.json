{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["src/lib"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    // Output
    "composite": true,
    "target": "esnext",
    "rootDir": "src/lib",
    "outDir": "dist/lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true
  }
}
