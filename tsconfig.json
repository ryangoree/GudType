{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./*.ts", "src"],
  "compilerOptions": {
    // Environment
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Type Checking
    "skipLibCheck": true,
    "strict": true,

    // Output
    "target": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true
  }
}
